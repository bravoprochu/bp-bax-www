{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "importHelpers": true,
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "esnext",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@sharedAnimations/*": ["./src/app/shared/animations/*"],
      "@sharedComponents/*": ["./src/app/shared/components/*"],
      "@sharedConst/*": ["./src/app/shared/const/*"],
      "@sharedDirectives/*": ["./src/app/shared/directives/*"],
      "@sharedEnums/*": ["./src/app/shared/enums/*"],
      "@sharedInterfaces/*": ["./src/app/shared/interfaces/*"],
      "@sharedServices/*": ["./src/app/shared/services/*"],
    }
  }
}
